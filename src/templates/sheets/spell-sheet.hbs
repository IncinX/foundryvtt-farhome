<form class="{{cssClass}}" autocomplete="off">
  {{!-- Uncomment to debug data context --}}
  {{!--{{log .}}--}}

  {{!-- TODO Need to add under-labels for some things similar to Actor sheet. --}}
  {{!-- TODO Create common parts to allow for common elements between the different item sheet types. --}}

  {{!-- Item Sheet Header --}}
  {{> "systems/farhome/templates/partials/item-header-partial.hbs"}}

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "farhome.description"}}</a>
    <a class="item" data-tab="attributes">{{localize "farhome.attributes"}}</a>
    <a class="item" data-tab="rollTemplate">{{localize "farhome.rollTemplate"}}</a>
  </nav>

  {{!-- Item Sheet Content --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor content=data.description.value target="data.description.value" button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      <table>
        <colgroup>
          <col class="attribute-label" />
          <col class="attribute-data" />
        </colgroup>
        {{!-- TODO Consider changing the name of these "-proficiency-partial" to something more generic since it is used for more than just proficiency now. --}}
        {{>
        "systems/farhome/templates/partials/bool-proficiency-partial.hbs"
        data.prepared
        objectString="data.prepared"}}
        {{>
        "systems/farhome/templates/partials/number-proficiency-partial.hbs"
        data.spellLevel
        objectString="data.spellLevel"}}
        <tr>
          <td>
            <label class="resource-label" for="data.spellSchool.value" data-label="data.spellSchool.label">{{data.spellSchool.label}}</label>
          </td>
          <td>
            <select name="data.spellSchool.value">
              {{#select data.spellSchool.value}}
                {{#each config.spellSchools as |name type|}}
                  <option value="{{type}}">{{localize name}}</option>
                {{/each}}
              {{/select}}
            </select>
          </td>
        </tr>
      </table>
    </div>

    {{!-- Roll Template Tab --}}
    <div class="tab" data-group="primary" data-tab="rollTemplate">
      {{editor content=data.rollTemplate.value target="data.rollTemplate.value" button=true owner=owner editable=editable}}
    </div>
  </div>
</form>