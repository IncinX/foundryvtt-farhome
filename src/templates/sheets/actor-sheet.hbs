<form class="{{cssClass}}" autocomplete="off">
  {{!-- Debugging --}}
  {{log data}}

  {{!-- Character Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>

    <section class="header-fields">
      <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'farhome.characterName'}}" />
      <input name="data.level" type="text" value="{{data.level}}" placeholder="{{localize 'farhome.level'}}" />
    </section>
  </header>
</form>