<form class="{{cssClass}}" autocomplete="off">
  {{!-- Character Sheet Header --}}
  <header class="sheet-header flexrow">
    <img class="profile" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>

    <section class="header-details flexrow">
      <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'farhome.characterName'}}" />
      <input name="data.background" type="text" value="{{data.background}}" placeholder="{{localize 'farhome.background'}}" />
    </section>
  </header>
  
  <div class="flexrow">
    {{!-- Character Stats and Saving Throw Proficiencies --}}
    <div class="stat">
      {{> "systems/farhome/templates/partials/character-stat-block.hbs" }}
    </div>
    <div class="flexcol">
      <div class="skill">
        {{> "systems/farhome/templates/partials/character-skills.hbs" }}
      </div>"
    </div>
  </div>
</form>