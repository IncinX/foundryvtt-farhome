<div class="resource-box flex-group-center">
  <div class="resource-content flexrow flex-center flex-between">
    <input type="text" name="{{objectString}}.value" value="{{value}}" data-dtype="Number"/>
    <span>{{separatorString}}</span>
    <input type="text" name="{{objectString}}.max" value="{{max}}" data-dtype="Number"/>
  </div>
  <div data-value-path='{{objectString}}.value' data-max-path='{{objectString}}.max'>
    <a class='resource-increment'><i class="fas fa-plus"></i></a>
    <label for="{{objectString}}.value" class="resource-label">{{label}}</label>
    <a class='resource-decrement'><i class="fas fa-minus"></i></a>
  </div>
</div>