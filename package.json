{
  "private": false,
  "name": "farhome",
  "description": "The Farhome game system implemented for FoundryVTT.",
  "license": "MIT",
  "homepage": "https://github.com/IncinX/foundryvtt-farhome",
  "repository": {
    "type": "git",
    "url": "https://github.com/IncinX/foundryvtt-farhome"
  },
  "bugs": {
    "url": "https://github.com/IncinX/foundryvtt-farhome/issues"
  },
  "contributors": [
    {
      "name": "Thomas Perry",
      "email": ""
    }
  ],
  "type": "module",
  "scripts": {
    "build": "gulp build",
    "build:watch": "gulp watch",
    "link-project": "gulp link",
    "clean": "gulp clean",
    "clean:link": "gulp link --clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts,.js,.cjs .",
    "lint:fix": "eslint --ext .ts,.js,.cjs --fix .",
    "format": "prettier --write \"./**/*.(ts|js|cjs|json|yml|less)\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.255.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/stream": "^2.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.1",
    "gulp": "^4.0.2",
    "gulp-less": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "less": "^3.13.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "rollup": "^2.70.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "yargs": "^17.4.0"
  },
  "lint-staged": {
    "*.(ts|js|cjs)": "eslint --fix",
    "*.(json|yml|less)": "prettier --write"
  }
}
